<h1>New expensegroup</h1>

<% form_for(@expensegroup) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
	<%= f.label :users %><br />
	<%= f.select :user_ids , User.find(:all).collect {|p| [ p.login, p.id ] } , { } , :multiple=>"multiple" %>		
  </p>
  <p>
	<%= f.label :personal %><br />
	<%= f.select :personal_id , User.find(:all).collect {|p| [ p.login, p.id ] } , { :include_blank=>true } %>		
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', expensegroups_path %>
