<h1>New expense</h1>

<% form_for(@expense) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
	<%= f.label :expensegroup %><br />
	<%= f.select :expensegroup_id , Expensegroup.find(:all).collect {|p| [ p.name, p.id ] } , { } %>		
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', expenses_path %>
